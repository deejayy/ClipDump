<Window x:Class="clipdump_re.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About ClipDump"
        Height="400"
        Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Icon="Resources/Icon/clipdump.png">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Application Icon/Logo -->
        <Image Grid.Row="0"
               Source="Resources/Icon/clipdump.png"
               Width="64"
               Height="64"
               HorizontalAlignment="Center"
               Margin="0,0,0,10"/>

        <!-- Application Name -->
        <TextBlock Grid.Row="1"
                   Text="ClipDump"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,5"/>

        <!-- Version -->
        <TextBlock Grid.Row="2"
                   Name="VersionTextBlock"
                   Text="Version 0.0.0"
                   FontSize="14"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

        <!-- Description -->
        <TextBlock Grid.Row="3"
                   Text="A clipboard management utility for persisting your clipboard history."
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"
                   Margin="0,0,0,10"/>

        <!-- Author -->
        <TextBlock Grid.Row="4"
                   Text="Author: DeeJayy"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

        <!-- GitHub Link -->
        <TextBlock Grid.Row="5"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10">
            <Hyperlink Name="GitHubHyperlink"
                       NavigateUri="https://github.com/deejayy/ClipDump"
                       RequestNavigate="GitHubHyperlink_RequestNavigate">
                https://github.com/deejayy/ClipDump
            </Hyperlink>
        </TextBlock>

        <!-- Copyright -->
        <TextBlock Grid.Row="6"
                   Name="CopyrightTextBlock"
                   Text="Â© 2025 DeeJayy. All rights reserved."
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   FontSize="12"
                   Foreground="Gray"/>

        <!-- Close Button -->
        <Button Grid.Row="7"
                Name="CloseButton"
                Content="Close"
                Width="80"
                Height="30"
                HorizontalAlignment="Center"
                Margin="0,10,0,0"
                IsDefault="True"
                Click="CloseButton_Click"/>
    </Grid>
</Window>
